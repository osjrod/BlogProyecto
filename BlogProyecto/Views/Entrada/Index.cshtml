@model PagedList.IPagedList<BlogProyecto.Models.Entrada>

@{
    ViewBag.Title = "Index";
}
@using PagedList.Mvc; 
@using PagedList; 

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="container">

    
        <div class="row">
             
   
            <div class="col-lg-8">
                @foreach (var item in Model) {
                <div class="well">
                <h1> @Html.DisplayFor(modelItem => item.Titulo) </h1>
                <p class="text-muted">by Usuario |  <a href="index.php">@Html.DisplayFor(modelItem => item.Usuario)</a> <span class="glyphicon glyphicon-time"></span> Posted on @Html.DisplayFor(modelItem => item.Fecha)
                </p>
                <hr>
                @Html.Raw(item.Contenido)
                
                <hr>



                
                <!-- the comment box -->
                <div class="well">
                    <h4>Leave a Comment:</h4>
                    <form role="form" action="/comentario/create" method="post">
                        <div class="form-group">
                            <textarea name="Contenido" class="form-control" rows="3"></textarea>
                            <input type="hidden" name="EntradaId" class="form-control" value="@item.Id">
                            <input type="hidden" name="Fecha" class="form-control" value="@DateTime.Now">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

                <hr>
                    <div>
                        @foreach (var comment in item.Comentarios.Reverse()) { 
                <div class="well">
                <h4>Usuario </h4>
                <p class="text-muted"><small>@Html.DisplayFor(modelItem => comment.Fecha)</small></p>
                <div class="comment">
                    <p>@Html.DisplayFor(modelItem => comment.Contenido)</p>
                    </div>
                            </div>
                    }
                    </div>
            </div>
                    }
                 @Html.PagedListPager( (IPagedList)Model, page => Url.Action("Index", new { page }) )

            </div>

        
           
    

            <div class="col-lg-4">
                <div class="well">
                    <h4>Blog Name</h4>
                    <p>@ViewBag.Blog.Nombre</p>
                    <!-- /input-group -->
                </div>
                <!-- /well -->
                <div class="well">
                    <h4>Popular Blog Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><a href="#dinosaurs">Dinosaurs</a>
                                </li>
                                <li><a href="#spaceships">Spaceships</a>
                                </li>
                                <li><a href="#fried-foods">Fried Foods</a>
                                </li>
                                <li><a href="#wild-animals">Wild Animals</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><a href="#alien-abductions">Alien Abductions</a>
                                </li>
                                <li><a href="#business-casual">Business Casual</a>
                                </li>
                                <li><a href="#robots">Robots</a>
                                </li>
                                <li><a href="#fireworks">Fireworks</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /well -->
                <div class="well">
                    <h4>Side Widget Well</h4>
                    <p>Bootstrap's default wells work great for side widgets! What is a widget anyways...?</p>
                </div>
                <!-- /well -->
            </div>
        </div>

        <hr>


    </div>





