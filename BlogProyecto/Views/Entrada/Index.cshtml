@model IEnumerable<BlogProyecto.Models.Entrada>

@{
    ViewBag.Title = "Index";
}


<div class="container">

    
        <div class="row">
            @foreach (var item in Model) { 
            <div class="col-lg-8">

                <!-- the actual blog post: title/author/date/content -->
                <h1> @Html.DisplayFor(modelItem => item.Titulo) </h1>
                <p class="lead">by <a href="index.php">@Html.DisplayFor(modelItem => item.Usuario)</a>
                </p>
                <hr>
                <p>
                    <span class="glyphicon glyphicon-time"></span> Posted on @Html.DisplayFor(modelItem => item.Fecha)</p>
                <hr>
                @Html.DisplayFor(modelItem => item.Contenido)
                
                <hr>



                
                <!-- the comment box -->
                <div class="well">
                    <h4>Leave a Comment:</h4>
                    <form role="form" action="/comentario/create" method="post">
                        <div class="form-group">
                            <textarea name="Contenido" class="form-control" rows="3"></textarea>
                            <input type="hidden" name="EntradaId" class="form-control" value="@item.Id">
                            <input type="hidden" name="Fecha" class="form-control" value="@DateTime.Now">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

                <hr>
            @foreach (var comment in item.Comentarios) { 
                <!-- the comments -->
                <h3>Start Bootstrap
                    <small>@Html.DisplayFor(modelItem => comment.Fecha)</small>
                </h3>
                <p>@Html.DisplayFor(modelItem => comment.Contenido)</p>
            }
            </div>

        }
    

            <div class="col-lg-4">
                <div class="well">
                    <h4>Blog Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                    <!-- /input-group -->
                </div>
                <!-- /well -->
                <div class="well">
                    <h4>Popular Blog Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><a href="#dinosaurs">Dinosaurs</a>
                                </li>
                                <li><a href="#spaceships">Spaceships</a>
                                </li>
                                <li><a href="#fried-foods">Fried Foods</a>
                                </li>
                                <li><a href="#wild-animals">Wild Animals</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><a href="#alien-abductions">Alien Abductions</a>
                                </li>
                                <li><a href="#business-casual">Business Casual</a>
                                </li>
                                <li><a href="#robots">Robots</a>
                                </li>
                                <li><a href="#fireworks">Fireworks</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /well -->
                <div class="well">
                    <h4>Side Widget Well</h4>
                    <p>Bootstrap's default wells work great for side widgets! What is a widget anyways...?</p>
                </div>
                <!-- /well -->
            </div>
        </div>

        <hr>


    </div>





