@model BlogProyecto.Models.LoginModel

@{
    ViewBag.Title = "Iniciar sesión";
}




<div class="row">
    <div class="col-lg-5 col-lg-offset-1 well">
<section id="loginForm">
    
<h3>Utilice una cuenta local para iniciar sesión.</h3>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Formulario de inicio de sesión</legend>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">@Html.LabelFor(m => m.UserName)</label>
            <div class="col-sm-12">
              @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
          </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">@Html.LabelFor(m => m.Password)</label>
            <div class="col-sm-12">
              @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
          </div>


        <div class="form-group">
            <div class="col-sm-10">
                <br />
              <input type="submit" value="Iniciar sesión" />
            </div>
          </div>

        
        
    </fieldset>
}
</section>
        </div>
<div class="col-lg-4 col-lg-offset-1 well">
<section class="social" id="socialLoginForm">
    <h3>Usar otro servicio para iniciar sesión.</h3>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>
</div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
